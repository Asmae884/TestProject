<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<StackPane fx:id="root" xmlns:fx="http://javafx.com/fxml" fx:controller="your.package.CuteAlertController"
           style="-fx-background-color: #fafafa; -fx-padding: 20; -fx-background-radius: 10;">
    <VBox spacing="15" alignment="CENTER">
        <Label fx:id="titleLabel" text="Alert Title"
               style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #5d3a7a;" />

        <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fx:id="iconView" fitHeight="48" fitWidth="48"/>
            <Label fx:id="messageLabel" wrapText="true" style="-fx-font-size: 14;" />
        </HBox>

        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <Button fx:id="cancelButton" text="Ignorer" onAction="#onCancel"
                    style="-fx-background-color: #ffd0e0; -fx-text-fill: black; -fx-background-radius: 5;"/>
            <Button fx:id="okButton" text="Valider" onAction="#onConfirm"
                    style="-fx-background-color: #cbffb4; -fx-text-fill: black; -fx-background-radius: 5;"/>
        </HBox>
    </VBox>
</StackPane>
