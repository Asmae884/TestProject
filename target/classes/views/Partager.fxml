<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="your.package.FileSharingController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
   <Pane prefHeight="89.0" prefWidth="495.0">
      <children>
      
          <!-- Search bar -->
          <TextField fx:id="searchField" layoutX="57.0" layoutY="45.0" maxWidth="300" prefHeight="25.0" prefWidth="218.0" promptText="Rechercher un utilisateur..." />
          <Button layoutX="310.0" layoutY="45.0" onAction="#handleAddUser" text="Ajouter" />
         <Label layoutX="176.0" layoutY="5.0" text="Nom de fichier" />
      </children>
   </Pane>

    <!-- Permissions section -->
    <HBox alignment="CENTER_LEFT" spacing="10" />

    <!-- TableView to display selected users and permissions -->
    <TableView fx:id="userTableView" prefHeight="200" prefWidth="500">
        <columns>
            <TableColumn fx:id="usernameColumn" prefWidth="150" text="Nom d'utilisateur" />
            <TableColumn fx:id="readColumn" prefWidth="75" text="Lecture" />
            <TableColumn fx:id="writeColumn" prefWidth="75" text="Écriture" />
            <TableColumn fx:id="deleteColumn" prefWidth="75" text="Suppression" />
            <TableColumn fx:id="downloadColumn" prefWidth="75" text="Téléchargement" />
        </columns>
    </TableView>
   <Pane prefHeight="79.0" prefWidth="500.0">
      <children>
      
          <!-- Validate button -->
          <Button layoutX="320.0" layoutY="27.0" onAction="#handleValidate" text="Valider" />
         <Button layoutX="97.0" layoutY="27.0" onAction="#handleValidate" text="Annuler" />
      </children>
   </Pane>
</VBox>
