<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="461.0" prefWidth="586.0" spacing="15.0" style="-fx-background-color: #ffffff; -fx-border-color: #5D3A7A; -fx-border-radius: 0 0 8 8; -fx-background-radius: 8;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="homedash.ShareDialogController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <!-- Titre en haut -->
      <Label fx:id="fileNameLabel" style="-fx-border-color: transparent transparent #5d3a7a transparent; -fx-padding: 0 0 10 0;" text="Nom de Fichier" textFill="#5D3A7A">
         <font>
            <Font name="Roboto Bold" size="16.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      
      <!-- Recherche et ajout d'utilisateurs -->
      <VBox spacing="10.0">
         <Label text="Ajouter des utilisateurs:" textFill="#5D3A7A" />
         <Pane>
            <children>
               <HBox alignment="CENTER_LEFT" layoutX="89.0" spacing="10.0">
                  <TextField fx:id="searchUserField" prefWidth="300.0" promptText="Rechercher un utilisateur" style="-fx-background-color: #f1f3f4; -fx-background-radius: 4;" />
                  <Button fx:id="addUserButton" onAction="#ajouterUtilisateur" style="-fx-background-color: #e8def8; -fx-text-fill: #5D3A7A; -fx-background-radius: 4;" text="Ajouter" />
               </HBox>
            </children>
         </Pane>
      </VBox>
      
      <!-- TableView des permissions -->
      <VBox prefHeight="200.0" spacing="5.0">
         <Label text="Permissions des utilisateurs:" textFill="#5D3A7A" />
         <TableView fx:id="permissionsTable" style="-fx-background-color: #f1f3f4; -fx-background-radius: 4;">
            <columns>
               <TableColumn fx:id="userColumn" prefWidth="247.99998551607132" text="Nom Utilisateur">
                  <cellValueFactory>
                     <PropertyValueFactory property="username" />
                  </cellValueFactory>
               </TableColumn>
               
<!-- Colonne Lire (CheckBox) -->
<TableColumn fx:id="readColumn" prefWidth="75.2" text="Lire" />

<!-- Colonne Écrire (CheckBox) -->
<TableColumn fx:id="writeColumn" prefWidth="71.2" text="Écrire" />

<!-- Colonne Charger (CheckBox) -->
<TableColumn fx:id="uploadColumn" prefWidth="71.2" text="Charger" />

<!-- Colonne Supprimer (CheckBox) -->
<TableColumn fx:id="deleteColumn" prefWidth="74.4" text="Supprimer" />

            </columns>
         </TableView>
      </VBox>
      
      <!-- Boutons Valider/Annuler -->
      <HBox alignment="CENTER" spacing="20.0">
         <Button fx:id="cancelButton" prefWidth="100.0" style="-fx-background-color: #FFD0E0; -fx-text-fill: #5D3A7A; -fx-background-radius: 4;" text="Annuler" />
         <Region prefHeight="0.0" prefWidth="200.0" />
         <Button fx:id="validateButton" onAction="#validerPartage" prefWidth="100.0" style="-fx-background-color: #CBFFB4; -fx-text-fill: #5d3a7a; -fx-background-radius: 4;" text="Valider" />
      </HBox>
   </children>
</VBox>